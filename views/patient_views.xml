<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

     <record id="view_hospital_patient_tree" model="ir.ui.view">
            <field name="name">hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <tree string="Patients">
                    <field name="name"/>
                    <field name="date_of_birth" optional="hide"/>
                    <field name="gender" optional="show"/>
                </tree>
            </field>
     </record>


    <record id="view_hospital_patient_form" model="ir.ui.view">
            <field name="name">hospital.patient.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form string="Patients">
                    <sheet>
                        <field name="img" widget="image" class="oe_avatar"/>
                        <group>
                            <group>
                                <field name="reference" readonly="True"/>
                                <field name="first_name" placeholder="First Name"/>
                                <field name="last_name" placeholder="Last Name"/>
                                <field name="name"  readonly="True" placeholder="Name"/>
                                <field name="gender"/>
<!--                                <field name="date_of_arrival"/>-->
                            </group>
                            <group>
                                <field name="date_of_birth"/>
                                <field name="age"/>
                                <field name="doctor_ids" widget="many2many_tags"/>
                                <field name="department_id"/>
                            </group>
                        </group>


                            <notebook>

                                    <page string="General information">
                                            <group>
                                                <group string="Address">
                                                  <field name="street"/>
                                                  <field name="city"/>
                                                  <field name="state"/>
                                                  <field name="country"/>
                                                </group>

                                            <group string="Contacts">
                                                <field name="telephone"/>
                                                <field name="phone"/>
                                                <field name="email"/>
                                                <field name="government_identity"/>
                                                <field name="marital_status"/>
                                            </group>
                                        </group>
                                    </page>

                                     <page string="Hospital Info">
                                         <group>
                                             <field name="blood_type"/>
                                             <field name="death_registration"/>
                                             <field name="date_of_death"/>
                                         </group>
                                    </page>

                                    <page string="Clinical Assessment">

                                         <group>
                                             <field name="height"/>
                                             <field name="weight"/>
                                             <field name="blood_pressure"/>
                                             <field name="spo2"/>
                                             <field name="symptoms"/>
                                             <field name="diagnosis"/>
                                         </group>
                                    </page>

                        </notebook>


                    </sheet>


                            <div class="oe_chatter">
                                <field name="message_follower_ids" groups="base.group_user"/>
                                <field name="message_ids"/>
                            </div>

                </form>
            </field>
     </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_ids" eval="[Command.clear(),
                          (0,0,{'view_mode':'tree', 'view_id': ref('view_hospital_patient_tree')}),
                          (0,0,{'view_mode':'form', 'view_id': ref('view_hospital_patient_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new patient
                </p>
            </field>
    </record>



    <!--Kanban view-->
    <record id="view_patient_kanban" model="ir.ui.view">
        <field name="name">patient.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban default_group_by="reference">
                <field name="reference"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('hospital.patient', 'img', record.id.raw_value)"
                                     class="oe_kanban_image" alt="Patient Image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div>Age: <field name="age"/></div>
                                <div>Gender: <field name="gender"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


</odoo>
